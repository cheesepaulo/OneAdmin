<h1 class="page-header"><%= @cartridges.model_name.human(count: 2)%></h1>

<div class="panel panel-default">
  <div class="panel-heading">
    <%= t('messages.listing', model: @cartridges.model_name.human(count: 2)) %>
    <%= link_to new_cartridge_path, class: "btn btn-success btn-circle pull-right",
        style: "margin-top: -5px" do %>
      <i class="fa fa-plus"></i>
    <% end %>
  </div>
  <div class="panel-body">
    <div class="table-responsive">
      <table class="table table-bordered table-striped">
        <thead>
          <tr>
            <th>#</th>
            <th><%= @cartridges.model.human_attribute_name('name') %></th>
            <th>Tipo</th>
            <th>Ações</th>
          </tr>
        </thead>
        <tbody>
          <% count = 0 %>
          <% @cartridges.each do |cartridge| %>
            <tr>
              <td> <%= count += 1 %> </td>
              <td> <%= cartridge.name %> </td>
              <td> <%= cartridge.kind_i18n %></td>
              <td style="width: 150px">
                <%= link_to edit_cartridge_path(cartridge), class: "btn btn-primary btn-circle" do %>
                  <i class="fa fa-edit"></i>
                <% end %>
                <button type="button" disabled="disabled" class="btn btn-danger btn-circle">
                  <i class="fa fa-minus"></i>
                </button>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
