<% if notice %>
  <script type="text/javascript">
    $.notify("<%= notice %>", { globalPosition: "top center", className: 'success' });
  </script>
<% end %>

<% if alert %>
  <script type="text/javascript">
    $.notify("<%= alert %>", { globalPosition: "top center", className: 'error' });
  </script>
<% end %>
